<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Picks"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#333"
                android:gravity="center"
                android:paddingTop="2dp"/>
        </LinearLayout>

        <View
            android:layout_width="12dp"
            android:layout_height="0dp" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Top Categories For You"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="32dp"
            android:layout_height="0dp" />
    </LinearLayout>

    <!-- Main Content Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Left Menu RecyclerView -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:background="#E7EEF6"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/leftMenuRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/item_left_layout"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>

        <!-- Main Categories RecyclerView -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@android:color/white">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainCategoriesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/main_category_layout"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                android:nestedScrollingEnabled="false"
                android:horizontalSpacing="8dp"
                android:verticalSpacing="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Static Bottom Button Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="8dp"
        android:weightSum="4"
        android:elevation="6dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_weight="1"
            android:id="@+id/orderButton"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:minWidth="0dp"
            android:text="Orders"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:singleLine="true"
            android:ellipsize="end"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            style="@style/App.OutlineButton.Default1" />

        <com.google.android.material.button.MaterialButton
            android:layout_weight="1"
            android:id="@+id/buyAgain"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:minWidth="0dp"
            android:text="Buy Again"
            android:textSize="9sp"
            android:textStyle="normal"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:singleLine="true"
            android:ellipsize="end"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            style="@style/App.OutlineButton.Default1" />

        <com.google.android.material.button.MaterialButton
            android:layout_weight="1"
            android:id="@+id/profileButton"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:minWidth="0dp"
            android:text="Profile"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:singleLine="true"
            android:ellipsize="end"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            style="@style/App.OutlineButton.Default1" />

        <com.google.android.material.button.MaterialButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/ListsButton"
            android:layout_height="44dp"
            android:minWidth="0dp"
            android:text="Lists"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_margin="2dp"
            android:textColor="#000000"
            android:singleLine="true"
            android:ellipsize="end"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            style="@style/App.OutlineButton.Default1" />

    </LinearLayout>

</LinearLayout>