<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/sectionsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_gravity="center_horizontal">

        <!-- Notification Section -->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:id="@+id/notificationSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/notificationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Permission Section -->
        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:id="@+id/permissionSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/permissionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>

        <!-- Default Purchase Settings -->
        <androidx.cardview.widget.CardView
            android:id="@+id/defaultPurchaseSection"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/defaultPurchaseText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textSize="18sp"
                android:textColor="@android:color/black" />
        </androidx.cardview.widget.CardView>

        <!-- About Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/aboutSection"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="8dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/aboutAppName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store App"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/aboutVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version: 1.0.0"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/aboutBuild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Build: 1"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/aboutCopyright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Â© 2025 reserved by storeApp"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DDDDDD"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>